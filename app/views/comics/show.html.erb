<div class="page-header">
  <h1><%= @comic.title %></h1>
  <%= @comic.created_at.in_time_zone("EST").strftime("%B %d %Y - %H:%M") %>
</div>

<%= render 'nav' %>

<div class="comic">
	<%= image_tag @comic.image.url(), :rel => "tooltip", :title => @comic.tooltip %>
</div>
<div class="description">
  <%= @comic.description %>
</div>
<div class="tags">
  <%= raw @comic.tag_list.map { |t| link_to t, tag_path(t), :class => "tag act" }.join('') %>
</div>
<br/>
<br/>

<%= render 'lower_nav' %>
<%= render 'nav' %>


